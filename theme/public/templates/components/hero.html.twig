{% set hero_class = ['absolute', 'top-0', 'left-0', 'z-20', 'w-full'] %}
{% if class | default %}
  {% set hero_class = hero_class | merge(class) %}
{% endif %}

{% embed "layout/section.html.twig" with {
  section_class : hero_class
} %}

  {% block section %}

    <div class="row mt-8/12 md:mt-4/12 lg:mt-3/12">
      <div class="col w-10/12 mx-auto">
        {% if size|default %}
          <p class="text-3lg md:text-2xl lg:text-{{ size }} font-bold font-display uppercase leading-none {% if align == 'center' %}text-center{% endif %}">
            {{ text }}
          </p>
        {% else %}
          <p class="text-3lg md:text-2xl lg:text-3xl font-bold font-display uppercase leading-none {% if align == 'center' %}text-center{% endif %}">
            {{ text }}
          </p>
        {% endif %}
      </div>
    </div>

  {% endblock %}

{% endembed %}

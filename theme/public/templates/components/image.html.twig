{% if image is not defined %}
  {% set brightness = random(4) %}

  {% if brightness == 0 %}
    {% set bg_color = 'bg-gray-300' %}
  {% elseif brightness == 1 %}
    {% set bg_color = 'bg-gray-400' %}
  {% elseif brightness == 2 %}
    {% set bg_color = 'bg-gray-500' %}
  {% else %}
    {% set bg_color = 'bg-gray-600' %}
  {% endif %}
  
  <figure class="{{ figure_class|join(' ') }} {{ bg_color }}">
  </figure>

{% else %}
{% if size is not defined %}
{% set size = "landscape-50vw" %}
{% endif %}

  <figure class="{{ figure_class|join(' ') }}">
    <img{{ image|get_timber_image_responsive(size) }}>
  </figure>

{% endif %}
